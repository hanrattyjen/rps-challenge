
<h1>Welcome <%=@game.player.name%>!</h1>
<h2><%= @game.player.name %> vs <%= @game.computer.name %></h2>

<h2>Options:</h2>

<div class="row">
        <div class="col-lg-4">
          <form action="/choice" id="rock" method="post">
            <input type="hidden" name="choice" value="0">
            <input class="btn btn-lg btn-success" type="submit" value="Rock">
          </form>
        </div>
        <div class="col-lg-4">
          <form action="/choice" id="paper" method="post">
            <input type="hidden" name="choice" value="1">
            <input class="btn btn-lg btn-success" type="submit" value="Paper">
          </form>
       </div>
        <div class="col-lg-4">
          <form action="/choice" id="scissors" method="post">
            <input type="hidden" name="choice" value="2">
            <input class="btn btn-lg btn-success" type="submit" value="Scissors">
          </form>
        </div>
      </div>
